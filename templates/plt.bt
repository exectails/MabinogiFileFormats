#include "inc/common.bt"

typedef struct
{
    float dirX1;
    float dirX2;
    float dirY1;
    float dirY2;
    float lenX;
    float lenY;
    int type;
    Vector2F position;
    Vector2F bottomLeft;
    Vector2F topRight;
}
Shape;

typedef struct
{
    Bool isDefault;
    int parameterType;
    int signalType;
    WString name;
    WString xml;

}
EntityParameter <optimize=false>;

typedef struct
{
    int propId;
    short index;
    short area; // 1024
    short region; // 0
    short unk1; // 160
    WString name;
    Vector3F_XYZ position;
    unsigned byte shapeCount;
    int shapeType;
    if (shapeCount > 0)
        Shape shapes[shapeCount];
    Bool isCollision;
    Bool fixedAltitude;
    float scale;
    float rotation; // radians
    Vector3F_XZY bottomLeft;
    Vector3F_XZY topRight;
    Color collorOverride;
    Color colors[9];
    WString title;
    WString state;
    byte parameterCount;
    if (parameterCount > 0)
        EntityParameter parameters[parameterCount];
}
Prop <optimize=false>;

int version;
int propCount;

Prop props[propCount];
